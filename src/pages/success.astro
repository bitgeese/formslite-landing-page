---
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import Button from "@components/ui/button.astro";
---

<Layout title="Form submitted successfully!">
  <Container>
    <div class="min-h-[calc(100vh-16rem)] flex items-center justify-center">
      <div class="mt-16 text-center">
        <h1 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">Form submitted successfully! </h1>
        <p class="text-lg mt-4 text-slate-600">Thank you! The form has been submitted successfully. We will reply to you soon!</p>
        <Button id="goback" type="button" size="md" block>Go Back</Button>
      </div>
    </div>
  </Container>
</Layout>


<script>
    document.getElementById('goback').addEventListener('click', function() {
            window.history.back();
        });
</script>